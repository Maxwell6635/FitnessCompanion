<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff4b5070">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#ff4b5070"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sleep Data History"
            android:id="@+id/textViewSleepDataTitle"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="@drawable/color_rainbow"
            android:textSize="25dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBackButton"
            android:src="@drawable/ic_keyboard_arrow_left_white_36dp"
            android:onClick="BackAction"
            android:layout_alignTop="@+id/textViewSleepDataTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/textViewSleepDataTitle"
            android:paddingRight="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previousDay"
            android:text="&lt;&lt;"
            android:onClick="PreviousDayClick"
            android:hint="Previous Day"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_below="@+id/textViewSleepDataTitle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DateDisplay"
            android:layout_toRightOf="@id/previousDay"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_below="@+id/textViewSleepDataTitle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextDay"
            android:text=">>"
            android:layout_toRightOf="@+id/DateDisplay"
            android:onClick="NextDayClick"
            android:hint="Next Day"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_below="@+id/textViewSleepDataTitle" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graph"
            android:layout_below="@id/nextDay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Quality:"
            android:layout_below="@+id/graph"
            android:id="@+id/SleepQualityCaption"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/graph" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_below="@+id/graph"
            android:id="@+id/SleepQualityValue"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            android:layout_toRightOf="@+id/SleepQualityCaption"
            android:layout_marginLeft="20dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/SleepQualityValue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:id="@+id/TableDetail"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Sleep Time "
                    android:id="@+id/TotalSleepTimeCaption"
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" :  "
                    android:id="@+id/separator1"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/TotalSleepTimeValue"
                    android:layout_column="2"
                    android:textSize="20dp"
                    android:textColor="@android:color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asleep Time "
                    android:id="@+id/AsleepTimeCaption"
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" :  "
                    android:id="@+id/separator2"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/AsleepTimeValue"
                    android:layout_column="2"
                    android:textSize="20dp"
                    android:textColor="@android:color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Times Awaken "
                    android:id="@+id/TimesAwakenCaption"
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:id="@+id/separator3"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/TimesAwakenValue"
                    android:layout_column="2"
                    android:textSize="20dp"
                    android:textColor="@android:color/white" />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Change View"
            android:id="@+id/textViewChangeView"
            android:gravity="center"
            android:background="@android:color/background_light"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:padding="4dp"
            android:onClick="changeView"
            android:layout_below="@+id/TableDetail"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp" />

    </RelativeLayout>

</ScrollView>
