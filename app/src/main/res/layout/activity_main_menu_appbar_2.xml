<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ff4b5070">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="my.com.taruc.fitnesscompanion.UI.MainMenu"
            android:padding="0dp">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/menuTable"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <TableRow android:id="@+id/LogoRow">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/imageViewlogo"
                        android:src="@drawable/fitness_run_icon"
                        android:layout_column="0"
                        android:layout_marginTop="20dp" />
                </TableRow>
                <TableRow android:id="@+id/LogoTitle">
                    <TextView
                        android:id="@+id/txtLogoTitle"
                        android:text="Fitness Companion"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:layout_column="0"
                        android:layout_gravity="center"/>
                </TableRow>
                <TableRow android:layout_gravity="center">
                    <RelativeLayout android:layout_gravity="center">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:id="@+id/imageViewStartExercise"
                            android:src="@drawable/menu_start"
                            android:clickable="true"
                            android:onClick="GoExerciseMenu"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageViewGoal"
                            android:src="@drawable/menu_goal"
                            android:clickable="true"
                            android:onClick="GoGoal"
                            android:layout_toRightOf="@+id/imageViewStartExercise"
                            android:layout_marginTop="40dp" />
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Goal"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:layout_below="@+id/imageViewGoal"
                            android:layout_alignLeft="@+id/imageViewGoal"
                            android:id="@+id/GoalTitle" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageViewSchedule"
                            android:src="@drawable/menu_schedule"
                            android:clickable="true"
                            android:onClick="GoSchedule"
                            android:layout_alignLeft="@+id/imageViewGoal"
                            android:layout_below="@+id/GoalTitle"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Schedule"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:layout_alignLeft="@+id/imageViewGoal"
                            android:id="@+id/ScheduleTitle"
                            android:layout_below="@+id/imageViewSchedule"
                            android:layout_marginLeft="10dp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageViewAchievement"
                            android:src="@drawable/menu_achievement"
                            android:clickable="true"
                            android:onClick="GoAchievementMenu"
                            android:layout_below="@+id/ScheduleTitle"
                            android:layout_alignLeft="@+id/imageViewGoal" />
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Achievement"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:id="@+id/AchievementTitle"
                            android:layout_alignLeft="@+id/imageViewGoal"
                            android:layout_below="@+id/imageViewAchievement" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageViewProfile"
                            android:src="@drawable/menu_profile"
                            android:clickable="true"
                            android:onClick="GoProfileMenu"
                            android:layout_below="@+id/imageViewStartExercise"
                            android:layout_marginLeft="-20dp"
                            android:layout_alignRight="@+id/imageViewStartExercise" />
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:id="@+id/ProfileTitle"
                            android:layout_below="@+id/imageViewProfile"
                            android:layout_alignLeft="@+id/imageViewProfile"
                            android:layout_marginLeft="10dp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageViewFriends"
                            android:src="@drawable/menu_friend"
                            android:clickable="true"
                            android:onClick="GoFriends"
                            android:layout_below="@+id/imageViewStartExercise"
                            android:layout_toLeftOf="@+id/imageViewProfile"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:text="Friend"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:layout_gravity="left"
                            android:layout_column="1"
                            android:id="@+id/FriendTitle"
                            android:layout_below="@+id/imageViewFriends"
                            android:layout_alignLeft="@+id/imageViewFriends"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>
                </TableRow>

                <!-- step num -->
                <TableRow>
                    <RelativeLayout android:layout_column="0">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/StepNumberTitle"
                            android:text="Step Number : "
                            android:textSize="10dp"
                            android:textColor="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/StepNumber"
                            android:textSize="25dp"
                            android:textColor="@color/white"
                            android:layout_toRightOf="@+id/StepNumberTitle"
                            android:text="0" />

                    </RelativeLayout>
                </TableRow>

            </TableLayout>
        </RelativeLayout>
        </ScrollView>

        <fragment
            android:id="@+id/fragment_navigation_drawer"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer"
            android:name="my.com.taruc.fitnesscompanion.NavigationDrawerFragment"
            tools:layout="@layout/fragment_navigation_drawer" />
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>