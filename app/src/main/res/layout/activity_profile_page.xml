<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="my.com.saiboon.fitnesscompanion.UI.ProfilePage"
    android:background="@android:color/white">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Profile"
        android:id="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:background="#ff0c54ff"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:src="@drawable/userprofilemenu"
        android:onClick="GoHealthProfile"
        android:layout_column="0"
        android:layout_below="@+id/textViewTitle" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:src="@drawable/healthprofilemenu"
        android:layout_marginLeft="10dp"
        android:onClick="GoUserProfile"
        android:layout_column="1"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textViewTitle" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView3" />

</RelativeLayout>
