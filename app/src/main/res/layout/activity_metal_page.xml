<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="my.com.saiboon.fitnesscompanion.UI.MetalPage"
    android:background="@android:color/white">

    <TextView android:text="@string/metal" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:gravity="center"
        android:id="@+id/textViewTitle"
        android:background="#ff0c54ff"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/walkMetalDividen"
        android:id="@+id/textViewWalk"
        android:layout_below="@+id/textViewTitle"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:background="#ff46cdff"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewWalk1km"
        android:layout_below="@+id/textViewWalk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/walk1km" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewWalk10km"
        android:layout_below="@+id/textViewWalk"
        android:layout_toRightOf="@+id/imageViewWalk1km"
        android:layout_toEndOf="@+id/imageViewWalk1km"
        android:src="@drawable/walk10km"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewWalk100km"
        android:layout_below="@+id/textViewWalk"
        android:layout_toRightOf="@+id/imageViewWalk10km"
        android:layout_toEndOf="@+id/imageViewWalk10km"
        android:src="@drawable/walk100km"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/runMetalDividen"
        android:id="@+id/textViewRun"
        android:layout_below="@+id/imageViewWalk1km"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:textSize="10dp"
        android:background="#ff46cdff"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewRun1km"
        android:layout_below="@+id/textViewRun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/run1km" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewRun10km"
        android:src="@drawable/run10km"
        android:layout_below="@+id/textViewRun"
        android:layout_toRightOf="@+id/imageViewRun1km"
        android:layout_toEndOf="@+id/imageViewRun1km"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewRun100km"
        android:src="@drawable/run100km"
        android:layout_below="@+id/textViewRun"
        android:layout_alignLeft="@+id/imageViewWalk100km"
        android:layout_alignStart="@+id/imageViewWalk100km"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/rideMetalDividen"
        android:id="@+id/textViewRide"
        android:textSize="10dp"
        android:layout_below="@+id/imageViewRun1km"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="#ff46cdff"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewRide1km"
        android:src="@drawable/ride1km"
        android:layout_below="@+id/textViewRide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewRide10km"
        android:src="@drawable/ride10km"
        android:layout_alignTop="@+id/imageViewRide1km"
        android:layout_toRightOf="@+id/imageViewRide1km"
        android:layout_toEndOf="@+id/imageViewRide1km"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewRide100km"
        android:src="@drawable/ride100km"
        android:layout_alignTop="@+id/imageViewRide10km"
        android:layout_toRightOf="@+id/imageViewRide10km"
        android:layout_toEndOf="@+id/imageViewRide10km"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hikeMetalDividen"
        android:id="@+id/textViewHike"
        android:textSize="10dp"
        android:layout_below="@+id/imageViewRide1km"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="#ff46cdff"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewHike1hr"
        android:src="@drawable/hike1hr"
        android:layout_below="@+id/textViewHike"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewHike10hr"
        android:src="@drawable/hike10hr"
        android:layout_alignTop="@+id/imageViewHike1hr"
        android:layout_toRightOf="@+id/imageViewHike1hr"
        android:layout_toEndOf="@+id/imageViewHike1hr"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewHike100hr"
        android:src="@drawable/hike100hr"
        android:layout_alignTop="@+id/imageViewHike10hr"
        android:layout_alignLeft="@+id/imageViewRide100km"
        android:layout_alignStart="@+id/imageViewRide100km"
        android:layout_marginLeft="10dp" />

</RelativeLayout>

</ScrollView>