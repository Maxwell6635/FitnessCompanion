<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.com.saiboon.fitnesscompanion.UI.SchedulePage"
    android:background="#ff4b5070">

    <TextView android:text="@string/schedule" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#AEBE36"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:id="@+id/TextViewSchedule"
        android:padding="5dp"
        android:layout_marginTop="20dp" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add New Activity Schedule"
        android:id="@+id/buttonNew"
        android:layout_below="@+id/TextViewSchedule"
        android:layout_centerHorizontal="true"
        android:onClick="GoScheduleNew"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSchedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/buttonNew" />

</RelativeLayout>
