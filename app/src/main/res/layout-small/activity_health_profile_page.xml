<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/MainBackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="my.com.taruc.fitnesscompanion.UI.HealthProfilePage">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/heart_rate_icon"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:id="@+id/HRicon"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/healthDetailTitle"
            android:layout_below="@+id/HRicon"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health detail"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_gravity="left" />
            <ImageView
                android:id="@+id/editHealthProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit_white_24dp"
                android:layout_toLeftOf="@+id/saveHealthProfile"
                android:layout_marginRight="5dp" />
            <ImageView
                android:id="@+id/saveHealthProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_save_white_24dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/healthDetailTitle"
            android:id="@+id/healthDetailTable"
            android:background="#ff6e779f"
            android:paddingLeft="4dp">
            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textColor="@android:color/white"
                    android:textSize="8dp" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/editTextWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:maxLength="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:layout_column="3"
                    android:textColor="@android:color/white"
                    android:text="KG"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bloodPressure"
                    android:textColor="@android:color/white"
                    android:textSize="8dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/editTextBloodP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:layout_column="3"
                    android:textColor="@android:color/white"
                    android:text="mmHg"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restingHeartRate"
                    android:textColor="@android:color/white"
                    android:textSize="8dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/editTextRHR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:digits="0123456789."
                    android:maxLength="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:layout_column="3"
                    android:textColor="@android:color/white"
                    android:text="mbp"/>
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bodyGirthTitle"
            android:orientation="horizontal"
            android:layout_below="@+id/healthDetailTable"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bodyGirth"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_gravity="left"/>
            <ImageView
                android:id="@+id/editBodyGirth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit_white_24dp"
                android:layout_gravity="right"
                android:layout_toLeftOf="@+id/saveBodyGirth"
                android:layout_marginRight="5dp" />
            <ImageView
                android:id="@+id/saveBodyGirth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_save_white_24dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bodyGirthTitle"
            android:id="@+id/bodyGirthTable"
            android:background="#ff6e779f"
            android:paddingLeft="4dp">
            <TableRow>
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arm"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp" />
                <EditText
                    android:id="@+id/editTextArm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:maxLength="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:layout_column="3"
                    android:text="cm"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chest"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp" />
                <EditText
                    android:id="@+id/editTextChest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:maxLength="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:layout_column="3"
                    android:text="cm"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calf"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp" />
                <EditText
                    android:id="@+id/editTextCalf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:digits="0123456789."
                    android:maxLength="5"
                    android:inputType="numberDecimal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:layout_column="3"
                    android:text="cm"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thigh"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp" />
                <EditText
                    android:id="@+id/editTextThigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:maxLength="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:layout_column="3"
                    android:text="cm"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tv_waist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waist"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_column="0"
                    android:maxLength="3" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp" />
                <EditText
                    android:id="@+id/editTextWaist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:maxLength="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:layout_column="3"
                    android:text="cm"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tv_Hip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hip"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp" />
                <EditText
                    android:id="@+id/editTextHip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:digits="0123456789." />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:layout_column="3"
                    android:text="cm"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultTitle"
            android:orientation="horizontal"
            android:layout_below="@+id/bodyGirthTable"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textView18"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/healthResult"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:layout_column="0"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultTitle"
            android:id="@+id/healthResultTable"
            android:background="#ff6e779f"
            android:padding="4dp">
            <TableRow android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BMR"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textViewBMR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:layout_gravity="right" />
            </TableRow>
            <TableRow android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BMI"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_column="0" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textViewBMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:layout_gravity="right" />
            </TableRow>
            <TableRow android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/WHR"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
                <TextView
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textViewWHR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="New Text"
                    android:textColor="@android:color/white"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:layout_gravity="right" />
            </TableRow>
        </TableLayout>



    </RelativeLayout>

</ScrollView>
