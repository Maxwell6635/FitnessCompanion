<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/MainBackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".LoginPage">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="logo"
            android:src="@drawable/fitness_run_icon"
            android:layout_margin="20dp" />

        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewLogo"
            android:layout_centerHorizontal="true"
            android:text="Fitness Companion"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginSection"
            android:layout_below="@+id/txtAppName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <TableRow android:layout_marginBottom="10dp"
                android:background="#ff6e779f">
                <ImageView
                    android:src="@drawable/login_username"
                    android:layout_column="0"
                    android:id="@+id/imageUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColorHint="#ffe3e3e3"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white" />
            </TableRow>
            <TableRow android:background="#ff6e779f">
                <ImageView
                    android:src="@drawable/login_password"
                    android:id="@+id/imagePassword"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="#ffe3e3e3"
                    android:inputType="textPassword"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white" />
            </TableRow>
        </TableLayout>


        <LinearLayout
            android:id="@+id/buttonSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginSection"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:layout_marginRight="30dp"
                android:background="#ff6e779f"
                android:textColor="@android:color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signUp"
                android:background="#ff6e779f"
                android:textColor="@android:color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSection"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textViewForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_button"
            android:text="@string/forgetPassword"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

    </RelativeLayout>

</ScrollView>