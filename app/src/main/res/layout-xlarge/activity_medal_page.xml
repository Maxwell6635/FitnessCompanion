<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/MainBackground">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.com.taruc.fitnesscompanion.UI.MetalPage"
    android:paddingBottom="20dp">

    <include layout="@layout/title_bar"
        android:id="@+id/titleBar"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/walkMetalDividen"
        android:id="@+id/textViewWalk"
        android:textSize="@dimen/fontSizeXLarge"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="@color/FontColor"
        android:layout_marginBottom="5dp"
        android:layout_column="0"
        android:layout_below="@+id/titleBar"
        android:layout_marginLeft="15dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWalk"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/TableMetalWalk"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <TableRow>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewWalk1km"
                android:src="@drawable/medal_unreached"
                android:layout_column="0"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewWalk10km"
                android:src="@drawable/medal_unreached"
                android:layout_column="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewWalk100km"
                android:src="@drawable/medal_unreached"
                android:layout_column="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="1 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewWalk1km"
                android:gravity="center"
                android:layout_column="0"
                android:textSize="@dimen/fontSizeXLarge" />
            <TextView
                android:text="10 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewWalk10km"
                android:gravity="center"
                android:layout_column="1"
                android:textSize="@dimen/fontSizeXLarge" />
            <TextView
                android:text="100 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewWalk100km"
                android:gravity="center"
                android:layout_column="2"
                android:textSize="@dimen/fontSizeXLarge" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/runMetalDividen"
        android:id="@+id/textViewRun"
        android:textSize="@dimen/fontSizeXLarge"
        android:padding="5dp"
        android:textColor="@color/FontColor"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/TableMetalWalk"
        android:layout_marginLeft="15dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRun"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/TableMetalRun"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <TableRow>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewRun1km"
                android:src="@drawable/medal_unreached"
                android:layout_column="0"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewRun10km"
                android:src="@drawable/medal_unreached"
                android:layout_column="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewRun100km"
                android:src="@drawable/medal_unreached"
                android:layout_column="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="1 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewRun1km"
                android:gravity="center"
                android:layout_column="0"
                android:textSize="@dimen/fontSizeXLarge" />
            <TextView
                android:text="10 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewRun10km"
                android:gravity="center"
                android:layout_column="1"
                android:textSize="@dimen/fontSizeXLarge" />
            <TextView
                android:text="100 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewRun100km"
                android:gravity="center"
                android:layout_column="2"
                android:textSize="@dimen/fontSizeXLarge" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/cycleMetalDividen"
        android:id="@+id/textViewCycle"
        android:textSize="@dimen/fontSizeXLarge"
        android:padding="5dp"
        android:textColor="@color/FontColor"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/TableMetalRun"
        android:layout_marginLeft="15dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCycle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/TableMetalRide"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <TableRow>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewRide1km"
                android:src="@drawable/medal_unreached"
                android:layout_column="0"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewRide10km"
                android:src="@drawable/medal_unreached"
                android:layout_column="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewRide100km"
                android:src="@drawable/medal_unreached"
                android:layout_column="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="1 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewRide1km"
                android:gravity="center"
                android:layout_column="0"
                android:textSize="@dimen/fontSizeXLarge" />
            <TextView
                android:text="10 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewRide10km"
                android:gravity="center"
                android:layout_column="1"
                android:textSize="@dimen/fontSizeXLarge" />
            <TextView
                android:text="100 km"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewRide100km"
                android:gravity="center"
                android:layout_column="2"
                android:textSize="@dimen/fontSizeXLarge" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hikeMetalDividen"
        android:id="@+id/textViewHike"
        android:textSize="@dimen/fontSizeXLarge"
        android:padding="5dp"
        android:textColor="@color/FontColor"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/TableMetalRide"
        android:layout_marginLeft="15dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHike"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/TableMetalHike"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <TableRow>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewHike1hr"
                android:src="@drawable/medal_unreached"
                android:layout_column="0"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewHike10hr"
                android:src="@drawable/medal_unreached"
                android:layout_column="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imageViewHike100hr"
                android:src="@drawable/medal_unreached"
                android:layout_column="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="1 hr"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewHike1km"
                android:gravity="center"
                android:layout_column="0"
                android:textSize="@dimen/fontSizeXLarge" />
            <TextView
                android:text="10 hr"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewHike10km"
                android:gravity="center"
                android:layout_column="1"
                android:textSize="@dimen/fontSizeXLarge" />
            <TextView
                android:text="100 hr"
                android:textColor="@color/FontColor"
                android:id="@+id/txtViewHike100km"
                android:gravity="center"
                android:layout_column="2"
                android:textSize="@dimen/fontSizeXLarge" />
        </TableRow>
    </TableLayout>

</RelativeLayout>

</ScrollView>